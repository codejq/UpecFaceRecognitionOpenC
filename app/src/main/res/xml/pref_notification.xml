<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->

    <EditTextPreference
        android:defaultValue="128"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Recognition Threshold"
        android:key="recognition_threshold"
        android:summary="as you increase the Threshold you will increase the false acceptance of unauthorized user"
        tools:numeric="integer"
        android:numeric="integer" />
    <SwitchPreference
        android:defaultValue="false"
        android:title="use native detector"
        android:key="use_android_native_detector"
        android:summary="use android native detector to extract face information " />
</PreferenceScreen>
